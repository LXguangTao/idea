<body class="layui-anim layui-anim-up">

    <div class="x-body">
        <div class="demoTable" style="margin:15px">
            
            <form class="layui-form" onsubmit="return false;" id="x-form">
                <div class="layui-inline"style="margin-right:100px">
                    <a class="layui-btn" id="remen">热门案例</a>
                    <a class="layui-btn" id="xiangguan">相关案例</a>
                </div>
                案例标题
                <div class="layui-inline">
                    <input class="layui-input" name="critics" placeholder="请输入案例标题" id="titles" autocomplete="off">
                </div>
                <button class="layui-btn" data-type="reload" id="search">搜索</button>
                <a class="layui-btn layui-btn-small" style="line-height:1.6em;margin-top:3px;float:right" href="javascript:location.replace(location.href);" title="刷新">
                    <i class="layui-icon" style="line-height:30px">ဂ</i>
                </a>
            </form>
        </div>
        <table class="layui-table" lay-filter="tabs" id="tableList"></table>
        <!--头部工具栏-->
        <script type="text/html" id="toolbarDemo">
            <button class="layui-btn layui-btn-danger" lay-event="delAll"><i class="layui-icon"></i>批量删除</button>            
        </script>
        <!--行内工具栏-->
        <script type="text/html" id="barDemo">
            <a title="编辑" lay-event="edit" href="javascript:;">
                <i class="layui-icon">&#xe642;</i>
            </a>
            <a title="删除" lay-event="del" href="javascript:;">
                <i class="layui-icon">&#xe640;</i>
            </a>
        </script>
        <div id="rec" style="display:none">
            <form class="layui-form" id="subForm">
                <div class="layui-form-item">
                    <input type="text" style="display:none" id="none" />
                    <label class="layui-form-label">
                        推荐位置
                    </label>
                    <div class="layui-input-inline">
                        <select id="recSel">
                            <option value="0">--未选择--</option>
                            <option value="1">热门推荐</option>
                            <option value="2">相关案例</option>
                        </select>
                    </div>
                </div>
                <div class="layui-form-item">
                    <input type="text" style="display:none" id="none" />
                    <label class="layui-form-label">
                        权重
                    </label>
                    <div class="layui-input-inline">
                        <input type="text" id="quanz" name="quanzhong"
                               autocomplete="off" class="layui-input">
                    </div>
                </div>
                <div class="layui-form-item">
                    <div style="width:80px;margin:50px auto">
                        <button type="button" class="layui-btn" lay-filter="rec" lay-submit="">
                            推荐
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <script>
        
      layui.use(['laydate','table','element','form','layer'], function(){
          var laydate = layui.laydate, table = layui.table, element = layui.element,form=layui.form,layer=layui.layer;
          $ = layui.jquery;
          //表格头
        table.render({
            elem: '#tableList'
            , id: 'testReload'
            , height: 520
            , url: '/back/Rec/CaseList'
            , page: true
            , limit: 10
            , toolbar: '#toolbarDemo'
            , method: 'post'
            , cols: [[ //表头
                { type: 'checkbox' }
                , { field: 'Id', title: 'Id', width: 80, sort: true }
                , { field: 'Title', title: '标题', width: 100 }
                , { field: 'Weight', title: '权重', width: 100 }
                , { field: 'right', align: 'left', title: '操作', toolbar: '#barDemo' }
            ]]
        });
          //重载
        $('.demoTable .layui-btn').on('click', function () {
            var type = $(this).data('type');
            //执行重载
            table.reload('testReload', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
              , where: {
                  title: $("#titles").val()
              }
            });
        });
        $("#remen").click(function () {
            table.reload('testReload', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
              , where: {
                  posid: 1
              }
            });
        });
        $("#xiangguan").click(function () {
            table.reload('testReload', {
                page: {
                    curr: 1 //重新从第 1 页开始
                }
              , where: {
                  posid:2
              }
            });
        });
        var ss;
        form.on('submit(rec)', function () {
            if ($("#recSel").val() == 0) {
                layer.alert("请选择推荐位置");
                return;
            }
            $.post("/back/rec/rec", { rec: $("#recSel").val(), id: $("#none").val(), quanz: $("#quanz").val() }, function (res) {
                if (res.success) {
                    layer.msg("推荐成功", { icon: 1, time: 2000 });
                    window.setTimeout(function () { layer.close(ss); }, 2000);
                } else {
                    layer.msg("推荐失败：" + res.message, { icon: 2, time: 2000 });
                }
            }, "json");
        });
          //行内工具栏
        table.on('tool(tabs)', function (obj) {
            var data = obj.data;
            var layEvent = obj.event;
            if (layEvent === 'del') {//删除
                layer.confirm("是否确认删除", function (index) {
                    $.post("/Back/Rec/DelRec", { id: data.Id ,posid:data.PosId}, function (res) {
                        if (res.success) {
                            obj.del();
                            layer.close(index);
                            layer.msg("删除成功:", { time: 2000, icon: 6 });
                        } else {
                            layer.msg("删除失败:" + res.message, { icon: 5 });
                        }
                    }, "json");
                });
            } else if (layEvent === 'edit') {
                $("#none").val(data.Id);
                console.log($("#recSel>option").length);
                for (var i = 0; i < $("#recSel>option").length ; i++) {
                    console.log($("#recSel>option").eq(i).val());
                    if ($("#recSel>option").eq(i).val() == data.PosId) {
                        $("#recSel>option").eq(i).attr("selected", "selected");
                        //$("#recSel>option").eq(i).prependTo($("#recSel"));
                    }
                }
                $("#quanz").val(data.Weight);
               ss= layer.open({
                    type: 1,
                    title: '推荐：' + data.Title,
                    area: ['400px', '300px'],
                    content:$('#rec')
                });
            }
        });

          //头部工具栏
        table.on('toolbar(tabs)', function (obj) {
            var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                case 'addCase':
                            var url = $(this).attr("_href");
                            for (var i = 0; i < $('.x-iframe', window.parent.document).length; i++) {//获取父页面的dom元素
                                if ($('.x-iframe', window.parent.document).eq(i).attr('data-id') == 12) {
                                    parent.element.tabChange('xbs_tab', i);
                                    //x-tab 为父页面<div class="layui-tab layui-tab-card site-demo-title x-main" lay-filter="x-tab" lay-allowclose="true"></div>
                                    return;
                                }
                            };
                            res = parent.element.tabAdd('xbs_tab', {//从父页面添加tab选项卡，如果不指定id，选项卡id会自增
                                title: "添加案例" //用于演示
                                , content: '<iframe frameborder="0" data-id="' + 12 + '" src="' + url + '" class="x-iframe"></iframe>'
                            });
                            parent.element.tabChange('xbs_tab', $('.layui-tab-title li', window.parent.document).eq(0));//添加选项卡后，默认此tab为选中状态
                            $('.layui-tab-title li', window.parent.document).eq(0).find('i').remove();

                    break;
                case 'delAll':
                    var data = checkStatus.data;
                    if (checkStatus.data.length == 0) {
                        layer.msg('请先选择要删除的数据行！', { icon: 2 });
                        return;
                    }
                    layer.confirm('真的删除行么', function (index) {
                        var ids = "";
                        var posids = "";
                        for (var i = 0; i < checkStatus.data.length; i++) {
                            ids += checkStatus.data[i].Id + " ";
                            posids += checkStatus.data[i].PosId + " ";
                        }
                        layer.close(index);
                        layer.msg('删除中...', { icon: 16, time: 5000 });
                        $.post('/Back/Case/DelCase',
                                { id: ids,posid:posids },
                                function (res) {
                                    if (res.success) {
                                        layer.msg("删除成功:", { time: 2000, icon: 6 });
                                        location.reload(true);
                                    } else {
                                        layer.msg("删除失败:" + res.message, { icon: 5 });
                                    }
                                }
                        );
                    });
                    break;
            }
        });
      });

    </script>
